<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/item_padding">

    <ImageView
        android:id="@+id/movie_cover_image_view"
        android:layout_width="@dimen/item_image_width"
        android:layout_height="@dimen/item_image_height"
        android:layout_marginEnd="@dimen/text_small_margin"
        android:transitionName="@string/movie_cover_transition_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/movie_name_text_view"
        style="@style/TextView.Primary.Bold"
        android:layout_marginStart="@dimen/text_small_margin"
        app:layout_constraintLeft_toRightOf="@id/movie_cover_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_name_eng_text_view"
        style="@style/TextView.Secondary"
        android:layout_marginStart="@dimen/text_small_margin"
        android:transitionName="@string/movie_name_eng_transition_name"
        app:layout_constraintLeft_toRightOf="@id/movie_name_text_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_premiere_date_text_view"
        style="@style/TextView.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_small_margin"
        android:ellipsize="end"
        android:lines="1"
        android:transitionName="@string/movie_premiere_transition_name"
        app:layout_constraintLeft_toRightOf="@id/movie_cover_image_view"
        app:layout_constraintTop_toBottomOf="@id/movie_name_text_view" />

</android.support.constraint.ConstraintLayout>